@{
    ViewData["Title"] = "Home Page";
}

@model List<PrototypeModel>

@section Head  {
    <style>
        .page-item.active .page-link {
            background-color: #119b00;
            border-color: #119b00;
        }

        .tbody-white {
            background-color: #fff;
        }
    </style>
}

@section Nav {
<nav class="navbar navbar-expand-md navbar-dark nav-auburn">
    <div class="container">
        <div class="navbar-brand"><img src="~/images/Logo.png" alt="Saturn Ergonomics Logo" height="50" /></div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link"><b>Home</b></a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Create" class="nav-link">Create</a>
                </li>
            </ul>
            <span class="navbar-text">
                Ergonomics Database
            </span>
        </div>
    </div>
</nav>
}

<div class="container mt-3 mb-3">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center">Ergonomics Database</h2>
            <hr />
            <table class="table table-bordered table-hover shadow-sm rounded" id="myTable">
                <thead class="thead-light">
                    <tr>
                        <th>Torque Type</th>
                        <th>Posture</th>
                        <th>Data Collection</th>
                        <th>Year</th>
                    </tr>
                </thead>
                <tbody class="tbody-white">
                    @foreach (var prototype in Model) {
                    <tr>
                        <td>@prototype.torqueType</td>
                        <td>@prototype.posture</td>
                        <td>@prototype.dataCollection</td>
                        <td>@prototype.year</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            $('#myTable').DataTable();
        })
    </script>
}